header: .navbar.navbar-default: .container
    .navbar-header
        a.navbar-brand(href='/') uinz
        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
    .collapse.navbar-collapse#navbar-collapse
        ul.nav.navbar-nav.navbar-right
            if user
                li.dropdown
                    a.dropdown-toggle(href='#' data-toggle='dropdown')= user.username
                        span.caret
                    ul.dropdown-menu
                        li: a(href='#') none
                        li.divider
                        li: a(href='/sign/signout') Sign out
            else
                li: a(href='/sign/signin') Sign in
                li: a(href='/sign/signup') Sign up
