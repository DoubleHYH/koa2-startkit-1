extends /layout/default.pug

block title
    title 登陆页

block content
    include /jumbotron.pug
    
    .container: .row: .col-lg-4.col-lg-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
        form(method="POST")
            .form-group
                label(for="signin-user") 用户名
                input#signin-username.form-control(placeholder="请输入用户名..." type="text" name="username" value=content.username)
            .form-group
                label(for="signin-user") 密码
                input#signin-password.form-control(placeholder="请输入密码..." type="password" name="password")
            .form-group
                a(href="/sign/signin") 忘记密码?
            button.btn.btn-primary.btn-block(type="submit") 登&emsp;陆
