extends /layout/default.pug

block title
  title 注册页

block content
  include /jumbotron.pug

  .container: .row: .col-lg-4.col-lg-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
    form(method="POST")
      .form-group
        label(for="signup-user") 用户名
        input#signup-username.form-control(placeholder="请输入用户名..." type="text" name="username" value=content.username)
      .form-group
        label(for="signup-email") 邮箱
        input#signup-email.form-control(placeholder="请输入邮箱..." type="email" name="email" value=content.email)
      .form-group
        label(for="signup-user") 密码
        input#signup-password.form-control(placeholder="请输入密码..." type="password" name="password")
      .checkbox.text-right: a(href="/sign/signin") 使用已有账号登录
      button.btn.btn-primary.btn-block(type="submit") 注&emsp;册
