extends /layout/default.pug

block title
    title 注册页

block content
    .container
        .row
            .col-sm-6.col-sm-offset-3
                h1= content
                form(method="POST")
                    .form-group
                        label(for="signup-user") username
                        input#signup-username.form-control(placeholder="user" type="text" name="username")
                    .form-group
                        label(for="signup-email") email
                        input#signup-email.form-control(placeholder="email" type="email" name="email")
                    .form-group
                        label(for="signup-user") password
                        input#signup-password.form-control(placeholder="password" type="password" name="password")
                    button.btn.btn-primary.btn-block(type="submit") 登陆
