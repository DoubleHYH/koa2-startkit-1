.header-jumbotron
    background linear-gradient(32deg, #2ecc71, #3498db, #8e44ad)
    height 400px
    color #fff
    padding-top 160px

header
    transition background .5s
    &.transparent
        border-bottom 1px solid transparent
        background-color rgba(255,255,255,.3)
        .navbar-toggle
            background-color rgba(255,255,255,.3)
            .icon-bar
                background-color #fff
        .divider
            margin 0
        .dropdown-menu
            padding 0
            background-color transparent
            li > a
                line-height 30px !important
        .nav
            margin-top 0
            margin-bottom 0
            .open > a
                background-color rgba(255,255,255,.3)

            a
                color #fff
                transition all .3s
                &:hover
                &:focus
                    background-color rgba(255,255,255,.3)
